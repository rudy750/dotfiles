# vim:set ft=sh :

# General
export TERM="xterm-color"
if [[ `uname -s` == *CYGWIN* ]]; then
    export TERM="cygwin"
fi
export DISPLAY=:0.0
export EDITOR=mvim

# PATH
my_path=$HOME/bin
vmware_path=/Library/Application\ Support/VMWare\ Fusion
ruby_path=/System/Library/Frameworks/Ruby.framework/Versions/1.8/usr/bin
local_path=/usr/local/bin:/usr/local/sbin
homebrew_python=/usr/local/Cellar/python/2.7.1/bin
export PATH=$my_path:$vmware_path:$ruby_path:$local_path:$homebrew_python:$PATH

export NODE_PATH=/usr/local/lib/node
# History stuff
shopt -s histappend
#shopt -s histverify
export HISTSIZE=
export HISTFILESIZE=

# Homebrew temp folder
export HOMEBREW_TEMP=/usr/local/tmp

# EC2
if [[ -e $HOME/.ec2 ]]; then
    export JAVA_HOME="/System/Library/Frameworks/JavaVM.framework/Home"
    export EC2_PRIVATE_KEY="$(/bin/ls $HOME/.ec2/pk-*.pem)"
    export EC2_CERT="$(/bin/ls $HOME/.ec2/cert-*.pem)"
    export EC2_HOME="/usr/local/Cellar/ec2-api-tools/1.3-57419/jars"
fi
